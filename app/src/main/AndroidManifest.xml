<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ridoy.examnoticeusingfirebase">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExamNoticeUsingFirebase"
        android:name=".ModelClass.Notification"
        android:usesCleartextTraffic="true">
        <activity android:name=".PaymentActivity"></activity>
        <activity android:name=".FreeUserActivity" />
        <activity android:name=".EligibilityActivity" />
        <activity android:name=".PDFActivity" />
        <activity android:name=".UnitActivity" />
        <activity android:name=".UniversityListActivity" />
        <activity android:name=".UniversityCategoryActivity" />
        <activity android:name=".GroupChatActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ScoreActivity" />
        <activity android:name=".QuestionActivity" />
        <activity android:name=".SetupProfileActivity" />
        <activity
            android:name=".OTPActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".PhoneNumberActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>